<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:popupMenuStyle">@style/PopupMenuListView</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.eOthers" parent="eVigour.Theme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:popupBackground">@android:color/background_dark</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="android:popupBackground">@android:color/background_dark</item>
    </style>

    <style name="PopupMenuListView" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:popupBackground">@android:color/background_dark</item>
    </style>

    <style name="eVigour.Theme" parent="Theme.AppCompat.NoActionBar" >
        <item name="colorPrimary">@color/eVigourColorPrimary</item>
        <item name="colorPrimaryDark">@color/eVigourColorPrimaryDark</item>
        <item name="colorAccent">@color/eVigourColorAccent</item>
        <item name="android:colorBackground">@color/eVigourBackground</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:textColor">@color/eVigourPrimaryText</item>
        <item name="android:textColorPrimaryInverse">@color/eVigourPrimaryTextInverse</item>
        <item name="android:colorForeground">@color/eVigourBackground</item>
        <item name="android:popupMenuStyle">@style/PopupMenuListView</item>
    </style>

</resources>
